<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.my.shop.web.admin.dao.TbUserDao">
    <sql id="tbUserColumns">
        a.id,
        a.username,
        a.password,
        a.phone,
        a.email,
        a.created,
        a.updated
    </sql>


    <select id="selectAll" resultType="com.chen.my.shop.domain.TbUser">
        SELECT
          <include refid="tbUserColumns"/>
        FROM
          tb_user AS a
    </select>

    <select id="getByEmail" resultType="com.chen.my.shop.domain.TbUser">
        SELECT
            <include refid="tbUserColumns"/>
        FROM
            tb_user AS a
        WHERE
            a.email = #{email}
    </select>

    <insert id="insert">
        INSERT INTO tb_user ( `id` `username` `password` `phone` `email` `created` `updated` )
        VALUES
     (
        #{id}
        #{username}
        #{password}
        #{phone}
        #{email}
        #{created}
        #{updated}
     )
    </insert>

    <update id="update">
        UPDATE `tb_user`
        SET
        `username` = #{username},
        `password` = #{password},
        `phone` = #{phone},
        `email` = #{email},
        `created` = #{created},
        `updated` = #{updated}
        WHERE
        `id` = #{id};
    </update>
</mapper>